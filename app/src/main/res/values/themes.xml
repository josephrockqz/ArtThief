<resources>
    <!-- Base application theme. -->
    <style name="Theme.ArtThief" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/art_thief_primary</item>
        <item name="colorPrimaryVariant">@color/art_thief_primary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!--Styling for Alert Dialogs-->
    <style name="AlertDialogTheme" parent="android:Theme.Material.Light.Dialog.NoActionBar">
        <item name="android:background">@color/white</item>
        <item name="android:buttonBarButtonStyle">@style/MyButtonsStyle</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="MyButtonsStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/teal_700</item>
    </style>

    <!--Styling for Switch Compats-->
    <style name="SwitchCompatTheme">
        <item name="colorSwitchThumbNormal">@color/compare_button_background</item>
        <item name="android:colorForeground">@color/black</item>
    </style>
</resources>

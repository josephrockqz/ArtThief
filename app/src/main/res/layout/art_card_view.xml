<?xml version="1.0" encoding="utf-8"?>
<!--TODO: Allow drag and of cards when listed by rating-->
<!--TODO: have drag and drop change artwork rating and order-->
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:id="@+id/art_card_view"
    card_view:cardBackgroundColor="?attr/colorOnPrimary"
    android:foreground="?selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <!--TODO: implement ability to swipe left & right on artwork to delete & restore-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="15dp"
        android:orientation="horizontal"
        android:paddingTop="20dp">

        <!--Artwork image-->
        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_weight="0"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_artImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:adjustViewBounds="true"
                android:scaleType="fitXY" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <!--Artwork info-->
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="80dp">

                <!--Title, artist, media, dimensions-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginStart="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_artTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Title"
                        android:textColor="@color/black"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_artArtist"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Artist"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/tv_artMedia"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Media"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/tv_artDimensions"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dimensions"
                        android:textColor="@color/black" />

                </LinearLayout>

                <!--Show ID-->
                <TextView
                    android:id="@+id/tv_artShowId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="15dp"
                    android:text="Show ID" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:background="@drawable/artwork_adapter_bottom_border">

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>

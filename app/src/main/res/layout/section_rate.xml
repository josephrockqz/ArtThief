<?xml version="1.0" encoding="utf-8"?>
<!--Artworks container-->
<!--TODO: get rid of if not needed-->
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_artworksContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignEnd="@+id/toolbar_top"
    android:layout_marginTop="?attr/actionBarSize">

    <!--Five stars container-->
    <RelativeLayout
        android:id="@+id/five_stars"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="25dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="15dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_rate_24dp"
                app:tint="@color/art_thief_primary"/>

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_rate_24dp"
                app:tint="@color/art_thief_primary"/>

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_rate_24dp"
                app:tint="@color/art_thief_primary"/>

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_rate_24dp"
                app:tint="@color/art_thief_primary"/>

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_rate_24dp"
                app:tint="@color/art_thief_primary"/>

        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="15dp"
            android:text="@string/rate_fragment_compare_button"/>

    </RelativeLayout>

    <!--Bottom border for five stars-->
    <View
        android:id="@+id/five_stars_bottom_border"
        android:background="@color/toolbar_bottom_border"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/five_stars"/>

</RelativeLayout>